model Appointment {
  id               String    @id @default(uuid())
  doctorId         String
  fee              Decimal   @db.Decimal(10, 2)
  percProfessional Decimal   @db.Decimal(4, 1)
  datetime         DateTime
  createdAt        DateTime  @default(now())
  createdBy        String
  updatedAt        DateTime  @updatedAt
  updatedBy        String?
  deletedAt        DateTime?
  deletedBy        String?

  doctor Doctor @relation(fields: [doctorId], references: [id])
  createdByUser User  @relation("AppointmentCreatedBy", fields: [createdBy], references: [id])
  updatedByUser User? @relation("AppointmentUpdatedBy", fields: [updatedBy], references: [id])
  deletedByUser User? @relation("AppointmentDeletedBy", fields: [deletedBy], references: [id])

  @@index([deletedAt])
}
